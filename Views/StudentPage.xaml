<!-- StudentPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.StudentPage"
             Title="Add Student">

    <StackLayout>
        <StackLayout Layout.Padding="20">
            <Entry Placeholder="Nom" x:Name="txtNom" BackgroundColor="#EEEEEE" Margin="0,0,0,10"  />
            <Entry Placeholder="Prénom" x:Name="txtPrenom" BackgroundColor="#EEEEEE" Margin="0,0,0,10"  />
            <Entry Placeholder="Classe" x:Name="txtClasse" BackgroundColor="#EEEEEE" Margin="0,0,0,10"  />
            
            <Button Text="Enregistrer" Clicked="Enregistrer_Clicked" BackgroundColor="#3498DB" TextColor="White" CornerRadius="5" />
        </StackLayout>
    </StackLayout>
</ContentPage>