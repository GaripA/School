<!-- ActivityPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.ActivityPage"
             Title="Add Activity">

    <StackLayout>
        <StackLayout Padding="20">
            <Entry Placeholder="Activity Name" x:Name="txtActivityName" BackgroundColor="#EEEEEE" Margin="0,0,0,10" />
            
            <Button Text="Enregistrer" Clicked="Enregistrer_Clicked" BackgroundColor="#3498DB" TextColor="White" CornerRadius="5" />
        </StackLayout>
    </StackLayout>
</ContentPage>